<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="JTTTheme" parent="android:@Theme.Wallpaper.NoTitleBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:textSize">15dip</item>
        <item name="android:buttonStyle">@style/JTTTabButton</item>
    </style>

    <style name="JTTButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/background</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="JTTTabButton" parent="JTTButton">
        <item name="android:textColor">@drawable/tab_text_selector</item>
        <item name="android:onClick">onToggle</item>
    </style>

    <style name="NotificationText">
        <item name="android:textColor">@color/stroke</item>
    </style>

    <style name="NotificationTitle">
        <item name="android:textColor">@color/stroke</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NotificationGlyph">
        <item name="android:textColor">@color/stroke</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="DialogNoTitle" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:textSize">15dip</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:buttonStyle">@style/JTTButton</item>
    </style>
</resources>