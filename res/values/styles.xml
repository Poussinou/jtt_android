<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jtt="http://schemas.android.com/apk/res/com.aragaer.jtt">

    <style name="BaseTheme" parent="@style/Theme.AppCompat">
        <item name="actionBarStyle">@style/DarkActionBar</item>
    </style>

    <style name="DarkTheme" parent="BaseTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:radioButtonStyle">@style/JTTTabButton</item>
    </style>

    <style name="JTTTheme" parent="DarkTheme">
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="glyph_stroke">@color/wadokei_stroke</item>
        <item name="wadokei_stroke">@color/wadokei_stroke</item>
        <item name="day_fill">@color/wadokei_fill</item>
        <item name="glyph_fill">@color/night_fill</item>
        <item name="night_fill">@color/night_fill</item>
        <item name="wadokei_fill">@color/wadokei_fill</item>
        <item name="text_stroke">@android:color/white</item>
    </style>

    <style name="SolidLight" parent="BaseTheme">
        <item name="glyph_stroke">@color/wadokei_stroke</item>
        <item name="wadokei_stroke">@color/wadokei_stroke</item>
        <item name="day_fill">@android:color/background_light</item>
        <item name="glyph_fill">@android:color/background_dark</item>
        <item name="night_fill">@android:color/background_dark</item>
        <item name="wadokei_fill">@android:color/background_light</item>
    </style>

    <style name="JTTTabButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@drawable/tab_text_selector</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="NotificationTitle">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NotificationGlyph">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="NotificationText">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="DarkActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="displayOptions">showCustom</item>
        <item name="background">@color/background</item>
        <item name="backgroundStacked">@null</item>
        <item name="backgroundSplit">@null</item>
        <item name="android:height">@dimen/ab_height</item>
    </style>

</resources>